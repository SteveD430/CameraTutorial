<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CameraTutorial.MainPage">
<Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Image x:Name="PhotoImage" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
    <Button x:Name="CameraBtn"
            Grid.Row="1"
            Grid.Column="0"
            Text="Take Photo"
            Clicked="OnCameraBtnClicked" />
    <Button x:Name="SaveBtn"
            Grid.Row="1"
            Grid.Column="1"
            Text="Save Photo"
            IsEnabled="False"
            Clicked="OnSaveBtnClicked" />
</Grid>
</ContentPage>